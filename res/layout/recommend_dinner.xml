<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal" >
        
	        <TextView 
	       	    android:id="@+id/tvNormal" 
	       	    android:layout_width="wrap_content" 
	            android:layout_height="wrap_content"
	   	        android:layout_marginLeft="65dip" 
	   	        android:layout_marginTop="10dip" 
	       	    android:text="Normal" 
	       	    android:textAppearance="?android:attr/textAppearanceMedium"
	       	    android:textColor="#40403f" 
	       	    android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/tvVegetarian"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="40dip"
		        android:layout_marginTop="10dip"
		        android:text="Vegetarian"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="#40403f"
		        android:textStyle="bold" />
	    </LinearLayout>
		    
	    <LinearLayout
	      	android:layout_width="match_parent" 
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
		    
	        <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="30dip"
		        android:text="Dinner"
		      	android:layout_marginLeft="25dip"
		        android:textAppearance="?android:attr/textAppearanceMedium"
		        android:textColor="#236da6"
		        android:textSize="20sp"
		        android:textStyle="italic|bold" />
	        
	        <LinearLayout
		         android:layout_width="match_parent" 
		       	 android:layout_height="wrap_content" 
		       	 android:orientation="horizontal">
	        
	       		 <TextView
				       	android:id="@+id/tvFirst"
				        android:layout_width="130dp"
				        android:layout_height="wrap_content"
				        android:text="meat"
				        android:layout_marginLeft="25dip"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 <TextView
				       	android:id="@+id/tvFirstServing"
				        android:layout_width="100dp"
				        android:layout_height="wrap_content"
				        android:text="serving"
				        android:textAppearance="?android:attr/textAppearanceMedium"				 
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />

	       		 <ImageButton
	       		     android:id="@+id/pricebutton1"
	       		     android:layout_width="48dip"
	       		     android:layout_height="25dip"	       		   
	       		     android:layout_marginTop="19dp"
	       		     android:background="@drawable/pricebutton_dinner" />

	       		 </LinearLayout>
	       		 
	         <LinearLayout
		         android:layout_width="match_parent" 
		       	 android:layout_height="wrap_content" 
		       	 android:orientation="horizontal">
	        
	       		 <TextView
				       	android:id="@+id/tv2nd"
				        android:layout_width="130dp"
				        android:layout_height="wrap_content"
				        android:text="vegetable"
				        android:layout_marginLeft="25dip"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 <TextView
				       	android:id="@+id/tv2ndServing"
				        android:layout_width="100dp"
				        android:layout_height="wrap_content"
				        android:text="serving"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 
	       		 <ImageButton
	       		     android:id="@+id/pricebutton2"
	       		     android:layout_width="48dip"
	       		     android:layout_height="25dip"
	       		     android:layout_marginTop="19dp"
	       		     android:background="@drawable/pricebutton_dinner" />
	       		 
	       		
	       		 
	       		 
	       		 
	       		 </LinearLayout>
	       		 
	         
	         		 
	         <LinearLayout
		         android:layout_width="match_parent" 
		       	 android:layout_height="wrap_content" 
		       	 android:orientation="horizontal">
	        
	       		 <TextView
				       	android:id="@+id/tv3rd"
				        android:layout_width="130dp"
				        android:layout_height="wrap_content"
				        android:text="fruit"
				        android:layout_marginLeft="25dip"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 <TextView
				       	android:id="@+id/tv3rdServing"
				        android:layout_width="100dp"
				        android:layout_height="wrap_content"
				        android:text="serving"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 
	       		 <ImageButton
	       		     android:id="@+id/pricebutton3"
	       		     android:layout_width="48dip"
	       		     android:layout_height="25dip"
	       		     android:layout_marginTop="19dp"
	       		     android:background="@drawable/pricebutton_dinner" />
	       		 
	       		 </LinearLayout>
	       		 
	         <LinearLayout
	             android:id="@+id/layout4th"
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:orientation="horizontal" >
	        
	       		 <TextView
				       	android:id="@+id/tv4th"
				        android:layout_width="130dp"
				        android:layout_height="wrap_content"
				        android:text="rice"
				        android:layout_marginLeft="25dip"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 <TextView
				       	android:id="@+id/tv4thServing"
				        android:layout_width="100dp"
				        android:layout_height="wrap_content"
				        android:text="serving"
				        android:textAppearance="?android:attr/textAppearanceMedium"
				        android:layout_marginTop="20dip"
				        android:textColor="#236da6"
				        android:textStyle="normal" />
	       		 
	       		 <ImageButton
	       		     android:id="@+id/pricebutton4"
	       		     android:layout_width="48dip"
	       		     android:layout_height="25dip"
	       		     android:layout_marginTop="19dp"
	       		     android:background="@drawable/pricebutton_dinner" />
	       		 
	       		 </LinearLayout>
	        
				<LinearLayout
		         android:layout_width="match_parent" 
		       	 android:layout_height="wrap_content" 
		       	 android:orientation="horizontal">
	       		
				    
				     <ImageButton
	       		     android:id="@+id/btnShuffle"
	       		     android:layout_width="65dip"
	       		     android:layout_height="30dip"
	       		     android:layout_marginLeft="180dp"
	       		     android:layout_marginTop="190dp"
	       		     android:background="@drawable/shuffledinner" />
	       		 
	       		 <ImageButton
	       		     android:id="@+id/okbutton1"
	       		     android:layout_width="34dip"
	       		     android:layout_height="34dip"
	       		     android:layout_marginLeft="20dp"
	       		     android:layout_marginTop="190dp"
	       		     android:background="@drawable/weightheight_proceed" />
	       		 
	       		 </LinearLayout>
	         	        
	        
	        
	        
	    </LinearLayout>

	</LinearLayout>
	
	
    
    
 
        


    
    
    

</ScrollView>
