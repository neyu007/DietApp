<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >

    <ImageView
        android:id="@+id/happyfitlogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/happyfitlogo" />
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="left" >

        <ImageButton
            android:id="@+id/btnRecommendation"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/recommendation_home" />
        
         <ImageButton
            android:id="@+id/btnMilestones"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/milestones_home" />
        
         <ImageButton
            android:id="@+id/btnReset"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:visibility="visible"
            android:background="@drawable/reset_home" />

	    </LinearLayout>

</LinearLayout>
